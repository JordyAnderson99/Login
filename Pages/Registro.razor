@page "/register"

@using Login.Models

<EditForm Model="registro">

    <div class="container h-100">

        <div class="d-flex justify-content-center h-100">

            <div class="card bg-light">

                <div class="card-header">
                    <div class="text-center">
                        <b>Registrarse</b>
                    </div>
                </div>

                <div class="card-body">

                    <form>
                        <div class="form-row justify-content-between m-0">

                            <div class="form-group">
                                <label>Nombres</label>
                                <InputText class="form-control" @bind-Value="registro.Nombres" />
                            </div>

                            <div class="form-group ml-2">
                                <label>Apellidos</label>
                                <InputText class="form-control" @bind-Value="registro.Apellidos" />
                            </div>

                        </div>

                        <div class="form-group">
                            <div class="form-group mb-3">
                                <label>Nombre de usuario</label>
                                <InputText class="form-control" @bind-Value="registro.Nickname" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="form-group mb-3">
                                <label>Correo electrónico</label>
                                <InputText class="form-control" @bind-Value="registro.Email" />
                            </div>
                        </div>

                        <div class="form-row justify-content-between m-0">

                            <div class="form-group">
                                <label>Contraseña</label>
                                <InputText class="form-control" type="password" @bind-Value="registro.Clave" />
                            </div>

                            <div class="form-group ml-2">
                                <label>Confirmar contraseña</label>
                                <InputText class="form-control" type="password" @bind-Value="registro.ConfirmarClave" />
                            </div>

                        </div>

                        <div class="d-flex flex-column mt-3">
                            <button class="btn btn-primary">Crear cuenta</button>
                        </div>

                    </form>

                </div>

            </div>

        </div>

    </div>
</EditForm>

@code {
    public Registros registro { get; set; } = new Registros();
}
